package com.kochmann.movieinfoservice.resources;

import java.util.Collections;
import java.util.List;

import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.kochmann.moviecatalogservice.models.CatalogItem;

@RestController
@RequestMapping("/movies")
public class MovieResource {
	@RequestMapping("/{movieId}")
	public List<CatalogItem> getCatalog(@PathVariable("movieId") String movieId){
		return Collections.singletonList(
				new Movie(moviedId,"Nome de teste", 4));
		
	}

}
